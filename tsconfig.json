{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "outDir": "out",
        "lib": [
            "ES2022",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "exclude": ["node_modules", ".vscode-test"]
}
